<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
    <h3><b><%= listing.title  %>:</b></h3>
    <div class="card" style="width: 25rem;">
        <img src="<%= listing.image  %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
          <p class="card-text"></p>
        </div>
      </div>
    <ul>
        <li><%= listing.description  %></li>
        <li>&#8377;<%= listing.price.toLocaleString("en-IN") %></li>
        <li><%= listing.location  %></li>
        <li><%= listing.country  %></li>
    </ul>
     </br>
     <div class="btns">
      <a href="/listings/<%= listing._id  %>/edit" class="btn btn-dark edit"> Edit </a>
    </br></br>
    <form method="post" action="/listings/<%= listing._id%>?_method=DELETE">
        <button class="btn btn-danger">Delete!</button></br></br>
    </form>
     </div>
     <hr>
     <div class="col-8 offset-2">
       <h4> Leave a Review</h4>
       <form>
        <div>
          <label for="rating" class="from-label">Rating</label>
          <input type="range" min="1" max="5" id="rating" name="review[rating]">
        </div>
        <div>
          <label for="comment" class="from-label">Comments</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"></textarea>
        </div>,<br>
        <button class="btn btn-outline-dark">Submit</button>
       </form>
     </div>
  </div>

</div>
</body>